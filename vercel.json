{
  "version": 2,
  "name": "plateforme-suivi-its",
  "builds": [
    {
      "src": "serverITS.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50MB"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/serverITS.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/serverITS.js"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|html))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/serverITS.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "nodeVersion": "22.x",
  "functions": {
    "serverITS.js": {
      "maxDuration": 30
    }
  }
}
